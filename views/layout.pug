<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{title}
        link(rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.css")
        //- link(rel="stylesheet", href="/css/main.css")
    body
        nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
            a.navbar-brand(href='/') KnowledgeBase
            button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
                span.navbar-toggler-icon
            #navbarNav.collapse.navbar-collapse
                ul.navbar-nav.mr-auto
                    li.nav-item
                        a.nav-link(href='/') Home
                            span.sr-only (currefdgdfgdbfdnt)
                    if user
                        li.nav-item
                            a.nav-link(href='/articles/add') Add articles
                ul.navbar-nav
                    if user
                        li.nav-item
                            a.nav-link(href='/users/logout') Logout
                    else
                        li.nav-item
                            a.nav-link(href='/users/register') Sign up
                        li.nav-item
                            a.nav-link(href='/users/login') Login 
        .container
            != messages('message', locals)
            if errors
                each i in errors
                    div(class="alert alert-danger")  #{i.msg}+dd
            block content

            br
            hr
            footer
                p Copyright &copy; 2020
            script(src="/bower_components/jquery/dist/jquery.js")
            script(src="/bower_components/bootstrap/dist/js/bootstrap.js")
            script(src="/js/main.js")
            
            
