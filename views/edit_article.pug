extends layout

block content
    h1 #{title}
    form(method="POST",action='/articles/edit/'+data._id)
        #form-group
            label Title:
            input.form-control(name='title',type='text',value=data.title)
        #form-group
            label Author:
            input.form-control(name='author',type='text',value=data.author)
        #form-group
            label Body:
            textarea.form-control(name='body') #{data.body}
        br
        input.btn.btn-primary(type='submit',value='Submit') 